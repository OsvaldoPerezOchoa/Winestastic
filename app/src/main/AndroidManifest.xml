<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Winestastic"
        tools:targetApi="31">
        <activity
            android:name=".EventsActivity"
            android:exported="true"
            android:label="@string/title_activity_events"
            android:theme="@style/Theme.Winestastic">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EventoActivity"
            android:exported="false" />
        <activity
            android:name=".Evento_Activity"
            android:exported="false"
            android:label="@string/title_activity_evento"
            android:theme="@style/Theme.Winestastic" />
        <activity
            android:name=".DetalleEventoActivity"
            android:exported="false" />
        <activity
            android:name=".EventodetalleActivity"
            android:exported="false"
            android:label="@string/title_activity_eventodetalle"
            android:theme="@style/Theme.Winestastic" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".SplashWinestastic"
            android:exported="true"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>